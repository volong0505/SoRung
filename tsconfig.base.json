{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@so-rung/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@so-rung/client-pipes": ["libs/client/_shared/pipes/src/index.ts"],
      "@so-rung/client-ui": ["libs/client/_shared/ui/src/index.ts"],
      "@so-rung/client-utils": ["libs/client/_shared/utils/src/index.ts"],
      "@so-rung/dashboard": ["libs/client/dashboard/src/index.ts"],
      "@so-rung/forest": ["libs/client/forest/src/index.ts"],
      "@so-rung/infra-mongo": ["libs/infra/mongo/src/index.ts"],
      "@so-rung/shell": ["libs/client/shell/src/index.ts"],
      "@so-rung/weighment-slip": ["libs/client/weighment-slip/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
